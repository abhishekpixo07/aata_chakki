<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/intl-tel-input/17.0.8/css/intlTelInput.css">
  <style>
   

    .auth-container {
      width: 100%;
      max-width: 400px;
      background-color: #fff;
      box-shadow: 0px 0px 15px rgba(0, 0, 0, 0.1);
      border-radius: 8px;
      overflow: hidden;
    }

    .header-container {
      text-align: center;
      background-color: #2AAA8A;
      color: #fff;
      padding: 20px;
    }

    h1 {
      margin: 0;
      font-size: 1.5em;
    }

    .auth-form {
      /* padding: 20px; */
    }

    .auth-form__input-wrapper {
      margin-bottom: 10px;
    }

    .phone-number-input {
      position: relative;
    }

    .intl-tel-input {
      width: 106%;
      padding: 15px;
      font-size: 1.2em;
      box-sizing: border-box;
      border: 1px solid #ddd;
      border-radius: 5px;
      background-color: #f8f9fa;
    }

    .button-primary {
      background-color: #2AAA8A;
      color: #fff;
      border: none;
      /* padding: 15px; */
      border-radius: 5px;
      cursor: pointer;
      font-size: 1.2em;
      transition: background 0.3s ease;
      width: 100%;
    }

    .button-primary:hover {
      background-color: #097969;
    }
  </style>
</head>
<body>

<article class="auth-container" id="new-customer">
  <div class="header-container">
    <h1>Login/Signup</h1>
  </div>
  <%= render 'shared/error_messages', target: resource %>

  <%= form_for resource, as: :spree_user, url: registration_path(resource), html: { class: "auth-form" } do |f| %>
    <div class="auth-form__input-wrapper">
      <%= f.label :phone_number %>
      <div class="phone-number-input">
        <%= f.hidden_field :phone_country_code, id: 'phone_country_code' %>
        <%= f.text_field :phone_number, placeholder: 'Enter Your Mobile Number', required: true, pattern: "[0-9]*", class: 'phone-number intl-tel-input' %>
      </div>
    </div>

    <div class="auth-form__input-wrapper">
      <%= f.button "Send OTP", name: :commit, class: 'button-primary' %>
    </div>
  <% end %>

<script src="https://cdnjs.cloudflare.com/ajax/libs/intl-tel-input/17.0.8/js/intlTelInput.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/intl-tel-input/17.0.8/js/utils.js"></script>
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
<script>
 $(document).ready(function(){
    $(".phone-number").keypress(function (e) {
      if (isNaN(String.fromCharCode(e.which))) e.preventDefault();
    });
 });

 document.addEventListener("DOMContentLoaded", function () {
    const phoneNumberField = document.querySelector(".phone-number");
    const phoneCountryCodeField = document.querySelector("#phone_country_code");
    const form = document.querySelector('.auth-form');

    $(document).ready(function(){
      $(".phone-number").on("input", function() {
        let maxLength = 10;
        let inputValue = $(this).val();
        
        // Trim input to the maximum length
        if (inputValue.length > maxLength) {
          $(this).val(inputValue.slice(0, maxLength));
        }
        
        // Allow only numeric input
        $(this).val($(this).val().replace(/[^0-9]/g, ''));
      });
    });

    let iti = window.intlTelInput(phoneNumberField, {
      initialCountry: "in",
      separateDialCode: true,
      utilsScript: "https://cdnjs.cloudflare.com/ajax/libs/intl-tel-input/17.0.8/js/utils.js",
      formatOnDisplay: false,
    });

    phoneNumberField.addEventListener('countrychange', function() {
      let countryData = iti.getSelectedCountryData();
      phoneCountryCodeField.value = countryData.dialCode;
    });

    form.addEventListener('submit', function(event) {
      let countryData = iti.getSelectedCountryData();
      phoneCountryCodeField.value = countryData.dialCode;

      // Check if the phone number is exactly 10 digits
      let phoneNumber = phoneNumberField.value;
      if (!(/^\d{10}$/.test(phoneNumber))) {
        alert("The phone number must be exactly 10 digits.");
        event.preventDefault(); // Prevent form submission
      }
    });
 });
</script>
</article>

</body>
</html>
