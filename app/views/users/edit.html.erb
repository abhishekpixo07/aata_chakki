<article class="auth-container" id="edit-account">
  <h1><%= I18n.t('spree.editing_user') %></h1>

  <%= render 'shared/error_messages', target: @user %>

  <%= form_for @user do |f| %>
    <div class="auth-form__input-wrapper">
      <div class="text-input">
        <%= f.label :first_name, "#{t("spree.first_name")}:*".html_safe %>
        <%= f.text_field :first_name, required: true %>
      </div>
    </div>

    <div class="auth-form__input-wrapper">
      <div class="text-input">
        <%= f.label :last_name, "#{t("spree.last_name")}:*".html_safe %>
        <%= f.text_field :last_name, required: true %>
      </div>
    </div>

    <div class="auth-form__input-wrapper">
      <div class="text-input">
        <%= f.label :email, "#{t("spree.email")}:*".html_safe %>
        <%= f.email_field :email, required: true %>
      </div>
    </div>

    <div class="auth-form__input-wrapper">
      <%= f.button t("spree.update"), name: :commit, class: 'button-primary button-primary--full-width' %>
    </div>
  <% end %>
</article>
